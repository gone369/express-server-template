{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
    }
  },
  "exclude": ["node_modules", "templates"],
  "include": ["src/**/*", "prisma/**/*"]
}
